<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="dependencies" default="depend.all">
    <dirname property="dependencies.basedir" file="${ant.file.dependencies}"/>
    <!-- ================================================================== -->
    <target name="depend.all"
            depends="depend.server, depend.user, depend.simulator">
    </target>
    <!-- ================================================================== -->
    <target name="depend.server"
            depends="depend.snp">
        <ant dir="${dependencies.basedir}/server" inheritAll="false"/>
    </target>
    <!-- ================================================================== -->
    <target name="depend.user"
            depends="depend.snp">
        <ant dir="${dependencies.basedir}/user" inheritAll="false"/>
    </target>
    <!-- ================================================================== -->
    <target name="depend.simulator"
            depends="depend.snp">
        <ant dir="${dependencies.basedir}/simulator" inheritAll="false"/>
    </target>
    <!-- ================================================================== -->
    <target name="depend.snp">
        <ant dir="${dependencies.basedir}/snp" inheritAll="false"/>
    </target>
</project>
